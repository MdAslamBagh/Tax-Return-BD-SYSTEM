@model Tax_Return_BD_System.Models.UserDocument
@{
    ViewBag.Title = "Create_Document";
}

@using (Html.BeginForm("Create_Document", "UserInformation", FormMethod.Post, new { onSubmit = "return SubmitForm(this)" }))
{
    <div class="form-horizontal">

        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.DocumentName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.DocumentName, new { htmlAttributes = new { @class = "form-control", placeholder = "User Name" } })
                    @Html.ValidationMessageFor(model => model.DocumentName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
       
        <div class="row">
            <div class="form-group">
                <div class="col-md-6">
                    <div align="right">
                        <input type="submit" value="submit" class="btn btn-primary" />
                        <input type="submit" value="reset" class="btn btn-warning" />
                    </div>
                </div>
            </div>
        </div>
    </div>

}
